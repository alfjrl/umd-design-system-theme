{#
/**
 * @file
 * Theme override for a three column layout.
 *
 * This template provides a three column 25%-50%-25% display layout, with
 * additional areas for the top and the bottom.
 *
 * Available variables:
 * - in_preview: Whether the plugin is being rendered in preview mode.
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 */
#}
{%
  set classes = [
    'layout',
    'umd-lib-layout',
    'layout--onecol',
  ]
%}
{% set column_attribute = settings.column_attribute|clean_id %}
{% if content %}
  <div {{ attributes.addClass(classes) }}>
  {% if content.one_column %}
    <div {{ region_attributes.one_column.addClass('one-column', 'col-child' , column_attribute) }}>
      {{ content.one_column }}
    </div>
  {% endif %}
  </div>
{% endif %}