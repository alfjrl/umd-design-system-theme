<umd-element-hero type="{{ hero_type }}" data-theme="{{ hero_theme }}">
  {% if hero_image %}
    <img slot="image" src="{{ hero_image }}"
      alt="{{ hero_alt }}" />
  {% endif %}
  {% if eyebrow %}
    <div slot="eyebrow">
      {{ eyebrow }}
    </div>
  {% endif %}
  {% if headline %}
    <h2 slot="headline">
      {{ headline }} 
    </h2>
  {% endif %}
  {% if main_text %}
    <div slot="text">
      {% block body_slot %}{% endblock %}
    </div>
  {% endif %}
  <div slot="actions">
    {% block cta_slot %}{% endblock %}
  </div>
</umd-element-hero>
      